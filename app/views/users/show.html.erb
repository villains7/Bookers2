<div class ="container px5 px-sm-0">
 <div class = "row">
  <%= render 'sidebar', book: @book, user: @user %>

  <div class = "col-md-8 offset-md-1">
     <h2>Books</h2>
      <table class = "table table-hover table-inverse">
       <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Option</th>
          <th colspan="3"></th>
       </thead>
      <tbody>
       <% @books.each do |book| %>
       <tbody>
        <tr>
         <td><%= image_tag @user.get_profile_image %> </td>
         <td><%= link_to book.title, book_path(book.id)%></td>
         <td><%= book.body %></td>
        </tr>
        <% end %>
       </tbody>
      </table>