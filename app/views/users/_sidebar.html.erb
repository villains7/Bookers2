
 <div class= "col-md-3">
  <h2>User info</h2>
   <%= image_tag user.get_profile_image %>
     <table class = "table">
      <tbody>
        <tr></tr>
        <tr>
         <th>name</th>
         <th><%=user.name%></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= user.introduction%></th>
        </tr>
       </tbody>
      </table>
        <div class ="row">
         <div class = "col">
         <% if user.id == current_user.id %>
         <%= link_to edit_user_path(current_user.id),class: "btn btn btn-secondary text-white" do%>
         <i class="fas fa-users-cog"></i>
         <% end %>
         <% else %>
         <%= link_to edit_user_path(user.id),class: "btn btn btn-secondary text-white"  do %>
          <i class="fas fa-users-cog"></i>
         <% end %>
         <% end %>
         </div>
        </div>

  <h2 class ="mt-3">New book</h2>
   <%= form_with model: book_, local:true do |f| %>

    <div class = "field">
     <h4>Title</h4>
     <%= f.text_field :title %>
    </div>

     <div class = "field">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
     </div>

    <div class = "actions">
    <br><%= f.submit 'Create Book',class: "btn btn-success"%></br>
    </div>
   <% end %>
 </div>