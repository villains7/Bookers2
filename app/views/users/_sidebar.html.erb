<main>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-md-3">
       <h2>User info</h2>
        <%= image_tag user.get_profile_image %>
         <table class = "table">
          <tbody>
           <tr></tr>
           <tr>
            <th>name</th>
            <th><%=user.name%></th>
           </tr>
           <tr>
            <th>introduction</th>
            <th><%= user.introduction%></th>
           </tr>
          </tbody>
         </table>
          <div class ="row">
           <p class= btn btn-outline_secondary btn-block fas fa-user-cog ></p>
          </div>

  <h2 clas ="mt-3">New book</h2>
   <%= form_with model: book, local:true do |f| %>

    <div class = "field">
     <h4>Title</h4>
     <%= f.text_field :title %>
    </div>

     <div class = "field">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
     </div>

    <div class = "actions">
    <br><%= f.submit 'Create Book',class: "btn btn-success"%></br>
    </div>
   <% end %>