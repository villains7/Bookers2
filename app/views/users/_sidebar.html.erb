
 <div class= "col-md-3">
  <h2>User info</h2>
   <%= image_tag user.get_profile_image%>
     <table class = "table">
      <tbody>
        <tr></tr>
        <tr>
         <th>name</th>
         <th><%=user.name%></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= user.introduction%></th>
        </tr>
       </tbody>
      </table>
        <div class ="row">
         <div class = "col">
         <% if user.id == current_user.id %>
         <%= link_to edit_user_path(current_user.id),class: "btn btn btn-secondary text-white" do%>
         <i class="fas fa-user-cog"></i>
         <% end %>
         <% else %>
         <%= link_to edit_user_path(user.id),class: "btn btn btn-secondary text-white"  do %>
          <i class="fas fa-user-cog"></i>
         <% end %>
         <% end %>
         </div>
         <% if !(user.name == "guestuser") %>
         <div class='row'>
         <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
        </div>
        <% end %>
        </div>

  <h2 class ="mt-3">New book</h2>
   <%= form_with model: book_new, local:true do |f| %>

    <div class = "form-group book_title">
     <%= f.label :Title %><br />
    <%= f.text_field :title,class: "form-control" %>
    </div>
    <div class = "form-group">
    <%= f.label :Opinion %><br />
    <%= f.text_area :body,class: "form-control book_body" %>
    </div>
    <div class = "actions">
    <br><%= f.submit 'Create Book',class: "btn btn-success"%></br>
    </div>
   <% end %>
 </div>