<div class ="container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 ps-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved:
      <ul>
       <%= @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
      <% end %>
    <%= form_with model: @user,local: true do |f| %>
     <div class = "form-group"><label for = "inputName">Name</label>
       <br><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
       </div>
        <div class = "form-group"><label for="inputImage">Image</label>
         <br><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
         <div class = "form-group"><label for="userintroduction">Introduction</label>
          <br><%= f.text_area :introduction%>
          </div>
          <%= f.submit "Update User",class: "btn btn-secondary" %>
         <% end %>
    </div>
  </div>
</div>