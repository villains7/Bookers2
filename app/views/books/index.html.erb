<%= render 'error',book: @book %>
<div class ="container px5 px-sm-0">
 <div class = "row">
    <%= render 'users/sidebar', book_new: @book_new, user: @user %>

    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class = "table table-hover table-inverse">
         <thead>
          <tr>
           <th></th>
           <th>Title</th>
           <th>Caption</th>
           <th colspan="3"></th>
          </tr>
         </thead>
          <% @books.each do |book| %>
           <tbody>
            <td><%= link_to  user_path(book.user_id) do %><% image_tag book.get_profile_image %><%end%></td>
            <td><%= link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
          <% end %>
           </tbody>
        </table>
    </div>
  </div>
</div>