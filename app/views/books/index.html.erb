
<%= render 'users/sidebar', book: @book, user: @user %>

<h2>Books</h2>
<table>
 <thead>
   <tr>
      <th></th>
      <th>Title</th>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
<tbody>
  <td><%= link_to image_tag book.user.get_profile_image %></td>
    <td><%= link_to book.title, book_path(book.id)%></td>
    <td><%= book.body %></td>
    <% end %>
</tbody>
</table>