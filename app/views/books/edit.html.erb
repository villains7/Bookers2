<%= render 'error',book: @book %>

<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Update Book' %></br>
<p><%= link_to "Show" ,book_path(@book.id)%>| <a href ="/books">Back</a></p>


<% end %>