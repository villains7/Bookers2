
<%= render 'users/sidebar', book: @book, user: @user %>
<div>
<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td><%= image_tag @book.user.get_profile_image %><br><%= link_to @book.user.name,user_path(@user) %></br></td>
      <td><%= link_to @book.title, book_path(@book.id)%></td>
      <td><%= @book.body %></td>
      <% if @user == current_user %>
      <td><%= link_to"Edit",edit_book_path(@book.id) %></td>
      <td><%= button_to"Destroy",book_path(@book.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

</main>
