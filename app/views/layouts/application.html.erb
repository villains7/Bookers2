<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
     <script src="https://kit.fontawesome.com/822ad2200d.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application','data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class = "container">
        <a class ="navbar-brand p-3" href ="/">Bookers</a>
         <ul class ="navbar-nav ml-auto">
         <% if user_signed_in? %>
           <i class="fas fa-home fa-lg" style="color:white"></i><%= link_to "Home", user_path(current_user.id) %></li><!--ユーザー詳細投稿画面-->
           <i class="fas fa-users fa-lg" style="color:white"></i><%= link_to "Users",users_path %></li>
           <i class="fas fa-book-open fa-lg" style="color:white"></i><%= link_to "Books", books_path %></li>
           <i class="fas fa-sign-out-alt fa-lg"style="color:white"></i><%= link_to "Log out",  destroy_user_session_path, method: :delete %></li>
         <% else %>
           <i class="fas fa-home fa-lg" style="color:white"></i><a href = "/">Home</a></li>
           <i class="fas fa-link fa-lg" style="color:white"></i><%= link_to "About",about_path %></li>
           <i class="fas fa-user-plus fa-lg" style="color:white"></i><%= link_to "Sign up", new_user_registration_path %></li>
           <i class="fas fa-sign-in-alt fa-lg" style="color:white"></i><%= link_to "Log in", new_user_session_path %></li>
         </ul>
         <% end %>
      </div>
    </nav>
    </header>
  <main>
      <p class ="notice"><%= flash[:create] %></p>
      <p class ="notice"><%= flash[:update] %></p>
      <p class ="notice"><%= flash[:destroy] %></p>
      <p><%= flash[:user_update] %></p>
     <% if notice %>
     <p><%= notice %></p>
     <% end %>
     <% if alert %>
     <p><%= alert %></p>
     <% end %>
    <%= yield %>
  </main>
    <footer>
      <div class = "container mt-5">
        <div class = "row">
          <div class ="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
